// Script de la Room de Inicio (Intro con Diálogo) - Room_Intro.asc


function IntroConDialogos()
{
    cPaxton.Say("Casa del Sr. Reed. Otoño, 2025.");
    Wait(100);
    
    cBarnes.Say("Última visita del día, hermana Paxton.");
    Wait(100);
    
    cPaxton.Say("Un teólogo retirado..., interesado en la 'realidad divina'.");
    Wait(100);
    
    cBarnes.Say("Todas las almas merecen la verdad.");
    Wait(100);
    
    cPaxton.Say("¿Y si algunas verdades..., no deberían ser encontradas?");
    Wait(100);
    
    cBarnes.Say("La fe no teme a la verdad.");
    Wait(100);
    
    cPaxton.Say("Esta no será una visita normal.");
    Wait(100);
    
    // Pausa dramática antes de la última línea
    Wait(150);
    
    cPaxton.Say("¿Lista para comenzar?");
    Wait(100);
    
   
   
}
function room_AfterFadeIn()
{
      // Paxton mira a la DERECHA (estático)
    cPaxton.LockView(cPaxton.View);  // Bloquear animación
    cPaxton.FaceDirection(eDirectionRight);
    cPaxton.StopMoving();
    
    // Barnes mira a la IZQUIERDA (estático)
    cBarnes.LockView(cBarnes.View);  // Bloquear animación
    cBarnes.FaceDirection(eDirectionLeft);
    cBarnes.StopMoving();
    // Llamar a la intro con diálogos al comenzar la room
    IntroConDialogos();
    
    // Después del diálogo, saltar a la Room 1
    player.ChangeRoom(1);
}
